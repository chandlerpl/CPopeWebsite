@using CPopeWebsite.Data.Blog

<div class="post-preview">
    <NavLink href="@($"blog/blogpost/{blogPost.Id}")">
        <h2 class="post-title">
            @blogPost.Title
        </h2>
        <h3 class="post-subtitle">
            @blogPost.PostSummary
        </h3>
    </NavLink>
    <p class="post-meta">
        Posted by
        <NavLink href="/">@blogPost.Author</NavLink>
        on @blogPost.Posted
    </p>
</div>

@code {
    [Parameter] public BlogPost blogPost { get; set; }
}
